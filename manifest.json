{
	"manifest_version": 2,
	"name": "Steem2Fiat",
	"version": "1.0",
	"description": "Converts Steem to local currency",
	"icons": {
		"128": "steem128.png"
	},
	"browser_action": {
    	"default_icon": "steem128.png"
  	},
	"content_scripts": [
		{ 
			"run_at" :"document_end",
			"matches": ["https://*.steemit.com/*"],
			"js": ["content_script.js"]
		}
	]
}